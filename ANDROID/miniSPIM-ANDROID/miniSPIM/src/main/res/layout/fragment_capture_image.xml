<?xml version="1.0" encoding="utf-8"?>

<!-- Reference : https://github.com/googlesamples/android-Camera2Basic -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.minispim.acquisition.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <SurfaceView
            android:layout_alignParentTop="true"
            android:id="@+id/TransparentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/control"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right|bottom"
                android:background="@color/darkGrey">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Zoom: 0%"
                    android:textColor="@color/white"
                    android:id="@+id/textViewLSposz"
                    android:layout_gravity="center_horizontal|bottom" />

                <SeekBar
                    android:id="@+id/seekBar_LS_posz"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"/>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/controlExp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right|bottom"
                android:background="@color/darkGrey">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Exposuretime: 0 ms"
                    android:textColor="@color/white"
                    android:id="@+id/textViewExp"
                    android:layout_gravity="center_horizontal|bottom" />

                <SeekBar
                    android:id="@+id/seekbar_shutter"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"/>


            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnStartLSMeasurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnSetup"
                    android:text="Acquire"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="Setup"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</RelativeLayout>